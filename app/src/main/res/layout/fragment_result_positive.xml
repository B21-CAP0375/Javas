<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.resultpositivepage.ResultPositiveFragment"
    android:padding="25dp">

    <TextView
        android:id="@+id/Positive_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/positive_covid_text"
        android:textSize="28sp"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_positive_page"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/background_button_grey_primary"
        android:scaleType="fitXY"
        android:text="@string/register_back_btn_txt"
        android:textColor="#B9B9B9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Positive_result_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LandingPage.LandingPage">

    <!-- TODO: Update blank fragment layout -->


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/landing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="@string/landing_page_title"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/landing_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/Landing_page_text"
        android:textAlignment="center"
        android:textColor="#8E8D8D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/landing_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:text="@string/login_btn_txt"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/background_button_blue_primary"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/landing_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signin"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:text="@string/signin_btn_txt"
        android:textSize="16sp"
        android:textColor="#B9B9B9"
        android:background="@drawable/background_button_grey_primary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
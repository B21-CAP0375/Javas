<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.updateuser.UpdateUserFragment"
    android:padding="25dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_phone_edtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/phone_edtxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/register_phone_input"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_alamat_edtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_phone_edtxt">

        <EditText
            android:id="@+id/alamat_edtxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/register_alamat_input"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_current_password_edtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_alamat_edtxt">

        <EditText
            android:id="@+id/current_password_edtxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/user_profile_current_password_input"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_password_edtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_current_password_edtxt">

        <EditText
            android:id="@+id/password_edtxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/user_profile_new_password_input"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue_login_page"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_button_blue_primary"
        android:text="@string/user_profile_change_btn_txt"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_back_register_page"
        app:layout_constraintTop_toBottomOf="@id/layout_password_edtxt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_register_page"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_button_grey_primary"
        android:scaleType="fitXY"
        android:text="@string/register_back_btn_txt"
        android:textColor="#B9B9B9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_continue_login_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_continue_login_page" />



</androidx.constraintlayout.widget.ConstraintLayout>